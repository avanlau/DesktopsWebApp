@model DT2.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<div style="position: relative; width: 1170px; height: 848px; background-image: url(../Content/Images/ACMECloudServiceLogin.jpg)">
    <div class="row" style="position: relative;">
        <div>
            <section id="loginForm" style="position: absolute; top: 328px; left: 394px">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", style = "background-color: transparent" }))
            {
                    @Html.AntiForgeryToken()
    <div class="form-group" style="margin-bottom: 4px">
        <div class=" col-md-10" style="width: 400px">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @style = "max-width: 400px; height: 45px;" })
        </div>
    </div>
    <div class="form-group" style="margin-bottom: 3px">
                        <div class="col-md-10" style="width: 400px;">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = "max-width: 400px; height: 44px; padding-bottom: 0;" })
                        </div>
                    </div>
    <div class="form-group" style="margin-bottom: 0px">
                        <div class="col-md-offset-2 col-md-10" style="padding-left: 91px; padding-top: -10px;">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "checkbox", @style = "margin-top: -10px; width: 16px; height: 16px;" })
                        </div>
                    </div>
    <div class="" style="margin-bottom: 0px">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="" style="position: absolute; left: 0px; top: 30px; max-width: 400px; width: 300px; height: 75px; padding: 0; background-color: transparent; border-color: transparent; " />
                        </div>
                    </div>
            }
            </section>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquerywatermark")
<script type="text/javascript">
    $(document).ready(function () {
        $("#UserName").watermark("domain\\username");
        $("#Password").watermark("password");
    });
</script>
}