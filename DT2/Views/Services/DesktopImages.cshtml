@model IEnumerable<DT2.Models.Template>
@{
    ViewBag.Title = "Desktop Images";
    int counter = 0;
}
<div>
    <div style="float:left; margin:10px">
        <h2 id="clddsk-page-header" class="h2-alternate">@ViewBag.Title</h2>
    </div>
    <div style="float: right; margin: 10px; color:#54BFED;">
            @using (Html.BeginForm("DesktopImagesAdd", null, null, FormMethod.Get))
            {
                <button type="submit" class="btn btn-default emp">Upload Desktop Image</button>
            }
    </div>
</div>
<div class="ctx-table-styled">
    <table class="table">
        <tr class="row_0">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesktopType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ready)
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            counter = (counter + 1) % 2;
            <tr class="@("row_"+counter)">
                <td>
                    @Html.ActionLink(@item.Name, "DesktopImagesDetails", new { id = item.Id })
                    @*@Html.DisplayFor(modelItem => item.Name)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DesktopType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ready)
                </td>
                <td>
                    @if (item.Id != null)
                    {
                        @Html.ActionLink("Delete", "DesktopImagesDelete", new {id = item.Id}, new {onclick = "return confirm('Are you sure you want to delete?')"})
                    }
                </td>
            </tr>
        }
        <tr>
            <th />
            <th />
            <th />
            <th />
        </tr>
    </table>
</div>