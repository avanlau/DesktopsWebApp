@model DT2.Models.DashboardViewModel


@{
    ViewBag.Title = "Dashboard";
}
<div>
    <div style="margin:10px">
        <h2 id="clddsk-page-header" class="h2-alternate">Welcome to the WebApp!</h2>
    </div>
</div>
<div class="notification">
        <b>Getting Started</b>
        <div>
        @using (Html.BeginForm("DesktopImagesAdd", null, null, FormMethod.Get))
        {
            <button type="submit" class="btn btn-default emp">Upload Desktop Image</button>
        }
    </div>
    <div>
        @using (Html.BeginForm("DesktopGroupsAdd", null, null, FormMethod.Get))
        {
            <button type="submit" class="btn btn-default emp">Create Desktop Group</button>
        }
    </div>
    <div id="clddsk-page-header">You can upload your own desktop image OR create a desktop group using a pre-defined image and make them available to your users.</div>
</div>
<table class="table boxed col-md-4">
    <tr><td class="boxed">
            <img src="~/Content/Images/icon-users.png" /><div class="stats"><span>@(Html.DisplayFor(Model => Model.ActiveUsers))</span><br/>@(Html.DisplayNameFor(Model => Model.ActiveUsers))</div>
      </td></tr>
      <tr><td class="boxed">
            <img src="~/Content/Images/icon-desktop-group.png"><div class="stats"><span>@(Html.DisplayFor(Model => Model.DesktopGroups))</span><br/>@(Html.DisplayNameFor(Model => Model.DesktopGroups))</div>
      </td></tr>
      <tr><td class="boxed"><img src="~/Content/Images/icon-desktop.png"><div class="stats"><span>@(Html.DisplayFor(Model => Model.Desktops))</span><br/>@(Html.DisplayNameFor(Model => Model.Desktops))</div>
      </td></tr>
      <tr><td class="boxed"><img src="~/Content/Images/icon-desktop-images.png">
        <div class="stats"><span>@(Html.DisplayFor(Model => Model.DesktopImages))</span><br/>@(Html.DisplayNameFor(Model => Model.DesktopImages))</div>
      </td></tr>
</table>
<div class="boxed col-md-8">
    @* HighCharts license required for commercial work, see http://shop.highsoft.com/faq
    @(ViewBag.PieChart)*@
</div>
